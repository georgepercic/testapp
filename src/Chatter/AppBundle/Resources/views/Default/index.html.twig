{% extends 'ChatterAppBundle:Layouts:app.html.twig' %}
{% block body %}
    <div class="body-back">
        <div class="masthead pdng-stn1">
            <!--CONFIRM MODAL-->
            <div id="confirm-payment-modal" style="display: none">
                <p><a href="#" rel="modal:close" style="font-size: 11px;">Cancel</a></p>
                <!--MODAL TITLE-->
                <div class="confirm-modal-title">
                    <h5>CONFIRM PURCHASE</h5>
                </div>
                <!--MODAL SUMMARY-->
                <div class="confirm-modal-summary">
                    <div class="col-sm-8" style="float: left;">
                        <p>Number of tickets:</p>
                        <p>Price per ticket:</p>
                    </div>
                    <div class="col-sm-4" style="float: left;">
                        <p>3</p>
                        <p>$1.00</p>
                    </div>
                </div>
                <div class="nav-bar"></div>
                <!--TOTAL-->
                <div class="confirm-modal-total">
                    <div class="col-sm-6" style="float: left;">
                        <h4>TOTAL:</h4>
                    </div>
                    <div class="col-sm-6" style="float: right;">
                        <h4>$3.00</h4>
                    </div>
                </div>

                <div class="nav-bar nav-bar-long"></div>
                <!--PAYMENT METHOD-->
                <div class="confirm-modal-payment">
                    <div class="col-sm-8" style="float: left;">
                        <p>Payment method:</p>
                    </div>
                    <div class="col-sm-4" style="float: left;">
                        <p class="add-card-button" id="add-card">ADD CARD</p>
                    </div>
                </div>

                <div class="nav-bar nav-bar-long"></div>
                <!--BUY-->
                <div class="col-sm-12 confirm-modal-buy">
                    <h4 id="buy-tickets">BUY TICKETS</h4>
                </div>
            </div>
            <!--END CONFIRM MODAL-->
            <!--START THANK YOU MODAL-->
            <div id="thankyou-modal" style="display: none">
                <div class="thankyou-modal-content">
                    <h4>THANK YOU!</h4>
                </div>
                <div class="thankyou-modal-content">
                    <p>You have purchased and entered X raffle tickets to win a 1-on-1 video chat with [star]!</p>
                </div>
                <div class="thankyou-modal-content" style="margin-bottom: 2em;">
                    <p>Best of luck winning the drawing!</p>
                </div>
            </div>
            <!--END THANK YOU MODAL-->
            <div id="credit-card-modal" style="display: none;">
                <form action="" method="POST" id="payment-form">
                    <span class="payment-errors"></span>

                    <div class="form-row">
                        <label>
                            <span>Card Number</span>
                            <input type="text" size="20" id="number" data-stripe="number">
                        </label>
                    </div>

                    <div class="form-row">
                        <label>
                            <span>Expiration (MM/YY)</span>
                            <input type="text" size="2" data-stripe="exp_month">
                        </label>
                        <span> / </span>
                        <input type="text" size="2" data-stripe="exp_year">
                    </div>

                    <div class="form-row">
                        <label>
                            <span>CVC</span>
                            <input type="text" size="4" id="cvc" data-stripe="cvc">
                        </label>
                    </div>


                    <input type="submit" class="submit" id="submit-add-card" value="Submit Payment">
                    <div id="payment-result"></div>
                </form>
            </div>
            <div class="phone-box wrap push">
                <div>
                    <h1 class="fit_tittle">PURCHASE TICKETS</h1>
                </div>
                <div class="follow-grds">
                    <div class="col-sm-6 follow-grid">
                        <img class="img-responsive img-circle img-left" style="width: 90%;" src="{{ asset('assets/images/drake.jpg') }}" alt=" "/>
                        <h4 style="margin-right: 18px;">DRAKE</h4>
                    </div>
                    <div class="col-sm-6 follow-grid">
                        <img class="img-responsive img-circle img-right" style="width: 90%;" src="{{ asset('assets/images/drake.jpg') }}"
                             alt=" "/>
                        <h4>MAKE A WISH</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="calendar-icon">
                    <img class="img-responsive" src="{{ asset('assets/images/calendar.png') }}" alt=" "/>
                </div>
                <div class="nav-bar"></div>
                <div class="follow" style="margin-top: 5px;">
                    <div class="follow-grids">
                        <div class="col-sm-4 follow-left text-center">
                            <img class="img-responsive" src="{{ asset('assets/images/WhiteTicket.png') }}" alt="">
                            <p>$20</p>
                        </div>
                        <div class="col-sm-4 follow-left text-center">
                            <img class="img-responsive" src="{{ asset('assets/images/WhiteTicket.png') }}" alt="">
                            <p>$20</p>
                        </div>
                        <div class="col-sm-4 follow-left text-center">
                            <img class="img-responsive" src="{{ asset('assets/images/WhiteTicket.png') }}" alt="">
                            <p>$20</p>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="follow">
                    <div class="follow-grids">
                        <div class="col-sm-4 follow-left text-center">
                            <img class="img-responsive" src="{{ asset('assets/images/WhiteTicket.png') }}" alt="">
                            <p>$20</p>
                        </div>
                        <div class="col-sm-4 follow-left text-center">
                            <img class="img-responsive" src="{{ asset('assets/images/WhiteTicket.png') }}" alt="">
                            <p>$20</p>
                        </div>
                        <div class="col-sm-4 follow-left text-center">
                            <img class="img-responsive" src="{{ asset('assets/images/WhiteTicket.png') }}" alt="">
                            <p>$20</p>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" class="form-control"
                               style="border-top-left-radius: 10px; border-bottom-left-radius: 10px;"
                               placeholder="OTHER AMOUNT">
                        <span class="input-group-btn">
						<a href="#confirm-payment-modal" class="btn btn-success"
                           style="border-top-right-radius: 10px; border-bottom-right-radius: 10px;">BUY TIX</a>
					</span>
                    </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->
            </div>
        </div>
    </div>
{% endblock %}